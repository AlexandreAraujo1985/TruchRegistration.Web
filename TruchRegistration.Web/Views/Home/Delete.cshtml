                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.YearManufacture)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.YearManufacture)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.YearModel)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.YearModel)
