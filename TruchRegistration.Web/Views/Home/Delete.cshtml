            @Html.HiddenFor(model => model.TruckId)
            @Html.HiddenFor(model => model.TruckModelId)
            @Html.HiddenFor(model => model.YearModel)
            @Html.HiddenFor(model => model.Model)
            @Html.HiddenFor(model => model.NameTruck)
            <dl>
                <dt>
